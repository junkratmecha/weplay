<header>
  <nav class="navbar navbar-expand-lg navbar-light fixed-top header-nav shadow-sm">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag 'logo_white_1.png', style: "width: 100px;" %>
    <% end %>
    <div class="collapse navbar-collapse" id="navmenu1">
      <% if user_signed_in? %>
        <ul class="navbar-nav mr-auto">
          <% if current_user.image? %>
            <li class="nav-item"><img src=<%= current_user.image %> class = "icon_image_mini">
            <%= link_to current_user.name, current_user %></li>
          <% else %>
            <li class="nav-item"><%= image_tag 'default-user-image.png', class: "icon_image_mini" %>
            <%= link_to current_user.name, current_user %></li>
          <% end %>
        </ul>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item"><i class="fas fa-handshake"></i><%= link_to ' クラン', "#" %></li>
          <li class="nav-item"><i class="fas fa-user"></i><%= link_to ' マイページ', current_user %></li>
          <li class="nav-item"><i class="fas fa-sign-in-alt"></i><%= link_to ' ログアウト', destroy_user_session_path, method: :delete%></li>
        </ul>
      <% else %>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item"><i class="fas fa-handshake"></i><%= link_to ' クラン', "#" %></li>
          <li class="nav-item"><i class="fas fa-user"></i><%= link_to ' ユーザー登録', new_user_registration_path %></li>
          <li class="nav-item"><i class="fas fa-sign-in-alt"></i><%= link_to ' ログイン', new_user_session_path %></li>
        </ul>
      <% end %>
      <dl class="searchbox">
        <dt><%= text_field :title_or_body_or_user, placeholder: "キーワードを入力", class: "form-control" %></dt>
        <dd><button type="submit" class="search-btn"><i class="fas fa-search" style="color: grey;"></i></button></dd>
    </div>
  </nav>
</header>