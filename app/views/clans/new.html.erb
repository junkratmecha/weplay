<%= render partial:'layouts/error', locals:{object: @clan} %>
<div class="container">
  <div class="row">
    <div class="offset-sm-2 col-sm-8 offset-sm-2">
      <div class="guide-content">
        <div class="page_title text-center">
            <h5 style="font-size: x-large; font-weight: bold;">クラン新規登録</h5>
        </div>
      </div>
      <h6 style="color: grey;">登録情報はクランアイコン・クラン紹介も含めていつでも変更できます。</h6>
      <%= form_with(model: @clan, local: true) do |f| %>
        <div class="form-group">
          <span class="badge badge-danger">必須</span><%= f.label :【名前】 %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :【レベル】 %>
          <%= f.text_field :level, autofocus: true, autocomplete: "level", class: "form-control" %>
        </div>
        <div class=":status-field">
            <%= f.label :【ステータス】 %><br />
            <%= f.select :status, [["メンバー募集中", "メンバー募集中"], ["非募集", "非募集"], ["活動休止中", "活動休止中"]], include_blank: "選択してください" %>
        </div>
        <div class=":atomosphere-field">
            <%= f.label :【雰囲気】 %><br />
            <%= f.select :atomosphere, [["エンジョイ", "エンジョイ"], ["エンジョイandガチ", "エンジョイandガチ"], ["ガチ", "ガチ"]], include_blank: "選択してください" %>
        </div>
        <div class="age-field">
            <%= f.label :【平均年齢】 %><br />
            <%= f.select :average_age, [["１０代", "１０代"], ["２０代", "２０代"], ["３０代", "３０代"], ["４０代", "４０代"], ["５０代以上", "５０代以上"]], include_blank: "選択してください" %>
        </div>
        <div class="tag_list-field">
          <span class="badge badge-danger">必須</span><%= f.label :【ゲーム】 %><br />
          <%= f.collection_select:tag_list, @tags.all, :name, :name, include_blank: "選択してください" %>
        </div>

        <div class="actions">
          <% if  current_user.clans.count >= 3 %>
            <p class="btn btn_red col-sm-12"">クラン所属限度(3)</p>
          <% else %>
            <p><%= f.submit "クラン作成", class: "btn btn3 col-sm-12" %></p>
          <% end %>
        </div>
      <% end %>
      <p><%= link_to 'マイページへ戻る', current_user, class: "btn btn4 col-sm-12" %></p>
    </div>
  </div>
</div>

