<%= devise_error_messages %>
<div class="container">
  <div class="row">
    <div class="offset-sm-2 col-sm-8 offset-sm-2">
      <p class="example1 text-center">ユーザー登録</p>
      <h6 style="color: grey;">ユーザー情報は登録後いつでも変更できます</h6>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <span class="badge badge-danger">必須</span><%= f.label :名前 %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :プレイステーションID %>
            <%= f.text_field :psid, autofocus: true, autocomplete: "psid", class: "form-control" %>
          </div>
          <div class="form-group">
            <span class="badge badge-danger">必須</span><%= f.label :メールアドレス  %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="sex-field">
            <%= f.label :性別 %><br />
            <%= f.label :男性  %>
            <%= f.radio_button :sex, :男性 %>
            <%= f.label :女性  %>
            <%= f.radio_button :sex, :女性 %>
          </div>
          <div class="age-field">
            <%= f.label :年齢 %><br />
            <%= f.label :１０代  %>
            <%= f.radio_button :age, :１０代 %>
            <%= f.label :２０代  %>
            <%= f.radio_button :age, :２０代 %>
            <%= f.label :３０代  %>
            <%= f.radio_button :age, :３０代 %>
            <%= f.label :４０代  %>
            <%= f.radio_button :age, :４０代 %>
            <%= f.label :５０代以上  %>
            <%= f.radio_button :age, :５０代以上 %>
          </div>
          <div class="form-group">
            <span class="badge badge-danger">必須</span><%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="form-group">
            <span class="badge badge-danger">必須</span><%= f.label :パスワードの再入力 %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="actions">
            <p><%= f.submit "登録", class: "btn btn3 col-sm-12" %></p>
          </div>

          <h6 style="color: grey;"><%= link_to "利用規約・お問い合わせ", terms_path %></h6>
          <h6 style="color: grey;"><%= link_to "プライバシーポリシー", privacy_path %></h6>
          <h6 style="color: grey;"><%= render "users/shared/links" %></h6>
      <% end %>
    </div>
  </div>
</div>

